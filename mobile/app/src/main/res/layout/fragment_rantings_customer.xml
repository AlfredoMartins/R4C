<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefaultBackground"
    android:padding="10dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_rants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_avaliacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0.0"
                        android:textSize="60sp" />


                    <LinearLayout
                        android:id="@+id/linear_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/ic_star_border_yellow" />


                        <ImageView
                            android:id="@+id/star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/ic_star_border_yellow" />


                        <ImageView
                            android:id="@+id/star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/ic_star_border_yellow" />


                        <ImageView
                            android:id="@+id/star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/ic_star_border_yellow" />


                        <ImageView
                            android:id="@+id/star_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/ic_star_border_yellow" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_person" />

                        <TextView
                            android:id="@+id/txt_total_avaliacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="0 Total"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_star_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/star_5_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_star_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="5"
                                android:textSize="15sp" />


                            <ProgressBar
                                android:id="@+id/progress_star_5"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/colorYellow"
                                android:secondaryProgress="100"
                                android:secondaryProgressTint="#397E7D7B"
                                android:secondaryProgressTintMode="src_over"
                                android:visibility="visible" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_star_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="0"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_star_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/star_4_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_star_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="4"
                                android:textSize="15sp" />


                            <ProgressBar
                                android:id="@+id/progress_star_4"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/colorYellow"
                                android:secondaryProgress="100"
                                android:secondaryProgressTint="#397E7D7B"
                                android:secondaryProgressTintMode="src_over"
                                android:visibility="visible" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="0"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_star_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/star_3_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_star_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="3"
                                android:textSize="15sp" />


                            <ProgressBar
                                android:id="@+id/progress_star_3"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/colorYellow"
                                android:secondaryProgress="100"
                                android:secondaryProgressTint="#397E7D7B"
                                android:secondaryProgressTintMode="src_over"
                                android:visibility="visible" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="0"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_star_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/star_2_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_star_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="15sp" />


                            <ProgressBar
                                android:id="@+id/progress_star_2"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/colorYellow"
                                android:secondaryProgress="100"
                                android:secondaryProgressTint="#397E7D7B"
                                android:secondaryProgressTintMode="src_over"
                                android:visibility="visible" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="0"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_star_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/star_1_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_star_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="15sp" />


                            <ProgressBar
                                android:id="@+id/progress_star_1"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/colorYellow"
                                android:secondaryProgress="100"
                                android:secondaryProgressTint="#397E7D7B"
                                android:secondaryProgressTintMode="src_over"
                                android:visibility="visible" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="0"
                            android:textSize="10sp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_rants"
                android:layout_marginTop="20dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>